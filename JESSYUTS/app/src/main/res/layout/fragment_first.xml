<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:paddingTop="20dp"
        android:src="@drawable/pizza1"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="31dp" />

    <TextView
        android:id="@+id/label_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:paddingTop="300dp"
        android:text=" Store "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#733F0E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="39dp" />

    <Spinner
        android:id="@+id/spin_label_1"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="12dp"
        android:entries="@array/city"
        android:textSize="@dimen/text_heading"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_1" />

    <TextView
        android:id="@+id/your_name"
        android:layout_width="278dp"
        android:layout_height="44dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:text=" Your Name "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#733F0E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_label_1" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:hint="Please fill your name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_name" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="136dp"
        android:background="@color/red_500"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>